{
  "name": "pern-template",
  "version": "1.0.0",
  "description": "Boilerplate for PERN frontend",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!<rootDir>/node_modules/",
    "!<rootDir>/path/to/dir/"
  ],
  "coverageReporters": [
    "json",
    "html"
  ],
  "dependencies": {
    "@apollo/client": "^3.0.2",
    "antd": "^4.12.3",
    "axios": "^0.19.2",
    "babel-polyfill": "^6.26.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "express": "^4.17.1",
    "graphql": "^14.7.0",
    "history": "^4.10.1",
    "immutable": "^4.0.0-rc.12",
    "jest-svg-transformer": "^1.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.13.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "3.1.0",
    "react-test-renderer": "^16.13.1",
    "styled-components": "^5.1.1",
    "subscriptions-transport-ws": "^0.9.17"
  },
  "devDependencies": {
    "lodash": "^4.17.19"
  },
  "scripts": {
    "start": "node server",
    "start:staging": "BROWSER=none REACT_APP_ENV=staging PORT=3000 react-scripts start",
    "start:dev": "BROWSER=none REACT_APP_ENV=development PORT=5000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --passWithNoTests --colors",
    "test:update:snapshot": "CI=true react-scripts test --env=jsdom --colors --updateSnapshot",
    "test:ci": "CI=true npm run test",
    "eject": "react-scripts eject"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}